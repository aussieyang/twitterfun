<% if @posts %>
<div id='controls'>
  <input id='poster' type="text">
  <button id='btn'>Find Posts By</button>
</div>

<div id='posts'>
  <h3>These are some wonderful posts from our users:</h3>
  <% @posts.each do |p| %>
    <p class=<%= p.user.name %> >"<%= p.content %>" - posted by <%= p.user.name %></p>
  <% end %>
</div>
<% end %>

<div id='quote'>
  <% for i in 0..5 %>
  <%= @quote[i]['content'].html_safe %>
  <% end %>
</div>

<div id='chuck'>
  <%= %>
</div>

<div id='catfact'>
  <%= %>
</div>
