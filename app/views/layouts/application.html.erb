<!DOCTYPE html>
<html>
<head>
  <title>Twatter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id='top-menu'>
    <% if @current_user %>
      <img src=<%= @current_user.imgurl %> alt="">
    <% end %>

    <img src="https://greatrednorth.files.wordpress.com/2011/06/twatter_logo_sticker-p2179701256406.jpg" alt="">

    <% if @current_user %>
      <div id='user-info'>
        <p>Welcome, <%= @current_user.name %></p>
        <button><a href="/logout">Logout</a></button>
      </div>
    <% end %>
  </div>

<%= yield %>

</body>
</html>
